@model List<SpaceRealty.Models.House>
@{
    ViewData["Title"] = "Houses";
}


<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Houses</title>
</head>
<body>
    <input id="searchText" type="text" placeholder="Search..." style="text-align:center;"/>
    <input type="submit" value="Go" />
    <table>
        <tr>
            <th>
                MLS #
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                ZipCode
            </th>
            <th>
                Bedrooms
            </th>
            <th>
                Bathrooms
            </th>
            <th>
                Square Feet
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MLSNum
                </td>
                <td>
                    @item.City
                </td>
                <td>
                    @item.State
                </td>
                <td>
                    @item.ZipCode
                </td>
                <td>
                    @item.Bedrooms
                </td>
                <td>
                    @item.Bathrooms
                </td>
                <td>
                    @item.SquareFeet
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditHouse", "Property", item)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteHouse", "Property", new { houseId = item.MLSNum })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Add New Property", "AddProperty", "Property")
</body>
</html>
